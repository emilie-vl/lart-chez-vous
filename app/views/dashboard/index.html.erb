<div class="container-fluid mt-4" data-controller="dashboard-tabs" id="dashboard-container">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h1><%= @user.first_name %> <%= @user.last_name %></h1>
    <div class="d-flex flex-column gap-3">
      <%= link_to "Modifier mon profil", edit_user_registration_path, class: "button border-button button-sm radius-10-0" %>
      <%= link_to "Ajouter une oeuvre", new_artwork_path, class: "button border-button button-sm radius-10-0" %>
    </div>
  </div>
  <ul class="list-inline tabs-underlined mb-3" data-dashboard-tabs-target="tabsUl">
    <li>
      <a href="#" class="tab-underlined active" data-action="click->dashboard-tabs#showRentals">Mes réservations</a>
    </li>
    <li>
      <a href="#" class="tab-underlined" data-action="click->dashboard-tabs#showArtworks">Mes œuvres d'art</a>
    </li>
    <li>
      <a href="#" class="tab-underlined" data-action="click->dashboard-tabs#showBookings">Mes locations</a>
    </li>
  </ul>
  <div class="row mt-4">
    <div class="col d-none" data-dashboard-tabs-target="myArtworks" id="myArtworks">
      <%= render "my_artworks" %>
    </div>
    <div class="col" data-dashboard-tabs-target="myRentals">
      <%= render "my_rentals" %>
    </div>
    <div class="col d-none" data-dashboard-tabs-target="myBookings">
      <%= render "my_bookings" %>
    </div>
  </div>
</div>
