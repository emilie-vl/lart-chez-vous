<div class="container mt-5">
  <h2 class="mb-4">Edit <%= resource_name.to_s.humanize %></h2>
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "form" }) do |f| %>
    <%= f.error_notification %>
    <div class="form-inputs">
      <div class="form-group">
        <%= f.input :email, required: true, autofocus: true, label: t('devise.registrations.edit.email'), input_html: { class: 'form-control' } %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div class="alert alert-warning">
          Currently waiting confirmation for: <%= resource.unconfirmed_email %>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.input :first_name, required: true, label: t('devise.registrations.edit.first_name'), input_html: { class: 'form-control' } %>
      </div>

      <div class="form-group">
        <%= f.input :last_name, required: true, label: t('devise.registrations.edit.last_name'), input_html: { class: 'form-control' } %>
      </div>

      <div class="form-group">
        <%= f.input :address, required: true, label: t('devise.registrations.edit.address'), input_html: { class: 'form-control' } %>
      </div>

      <div class="form-group">
        <%= f.input :password,
                    hint: "leave it blank if you don't want to change it",
                    required: false,
                    input_html: { class: 'form-control', autocomplete: "new-password" },
                    label: t('devise.registrations.edit.password') %>
      </div>

      <div class="form-group">
        <%= f.input :password_confirmation,
                    required: false,
                    input_html: { class: 'form-control', autocomplete: "new-password" },
                    label: t('devise.registrations.edit.password_confirmation') %>
      </div>

      <div class="form-group">
        <%= f.input :current_password,
                    hint: "we need your current password to confirm your changes",
                    required: true,
                    input_html: { class: 'form-control', autocomplete: "current-password" },
                    label: t('devise.registrations.edit.current_password') %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Update", class: "btn btn-primary" %>
    </div>
  <% end %>

  <!-- Commented out cancel account functionality -->
  <!--
  <h3>Cancel my account</h3>
  <div>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger" %></div>
  -->

  <%= link_to "Back", :back, class: "btn btn-outline-secondary" %>
</div>
