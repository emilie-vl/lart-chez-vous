<div class="container-fluid mt-4 px-5">
  <div class="d-flex justify-content-between gap-4">
    <div class="cards col-8" >
      <% @artworks.each do |artwork| %>
        <%= link_to artwork_path(artwork) do %>
          <%=render partial: "application/card", locals: {artwork: artwork}%>
        <% end %>
      <% end %>
    </div>
    <div class="home-map col-4 sticky-top" style="width: 100%; height: 100vh;"
  data-controller="home-map"
  data-home-map-markers-value="<%= @markers.to_json %>"
  data-home-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
      <div class="index-map-title leckerli"><%= @artwork_count %> oeuvres pr√®s de chez vous</div>
    </div>
  </div>
</div>
