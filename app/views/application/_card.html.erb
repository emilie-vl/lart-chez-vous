<div class="card">
  <% if artwork.photo.attached? %>
    <%= cl_image_tag artwork.photo.key, height: 200, width: 200, crop: :fill %>
  <% else %>
    <div class= "missing_picture text-center"></div>
  <%end%>
  <div class="card-artwork-infos">
    <div>
      <h2><%= artwork.title %></h2>
      <h3><%= artwork.artist.artist_display_name %></h3>
      <p><%= artwork.dimensions %></p>
      <p><%= artwork.price_by_day %> â‚¬/jour</p>
      <% if current_user.present? && current_user.id == artwork.owner_id %>
        <%= link_to "Supprimer", destroy_artwork_path(artwork), data: { turbo: false }, class: 'btn btn-danger mt-3' %>
      <% end %>
    </div>
  </div>
</div>
